<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    
    
    <div class="container">
      <h1>Category Table</h1>
      <% if (success_msg && success_msg.length>0) { %>
        <div class="alert alert-success"><%= success_msg %></div>
      <% } %>
      
      <% if (error_msg  && error_msg.length>0) { %>
        <div class="alert alert-danger"><%= error_msg %></div>
      <% } %>
      <div class="pgbtn" class="text-center ms-5 px-2">
        <a href="/admin/category/add" class="btn btn-primary">Add Category</a>
        <a href="/admin/category/discarded" class="btn btn-primary">Show discarded items</a>
        <a href="/admin/dashboard" class="btn btn-primary">Back to dashboard</a>
        <!-- <a href="/student/list" class="btn btn-primary">Show all items</a> -->
      </div>
        <br>
        <table class="table">
            <thead>
              <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">Name</th>
                <th colspan="3" scope="col" class="text-center">Actions</th>
              </tr>
            </thead>

            <tbody>
              <%if(category.length==0){%>
              <tr>
                <td colspan="6" class="text-center">No data found</td>
              </tr>
              <%}else{%>
                <%category.forEach((item,index) => {%>
              <tr>
                <th scope="row"><%=index+1%></th>
                <td><%=item.name%></td>
                <td><a class="btn btn-outline-warning" href="/admin/category/edit/<%=item._id%>" role="button">Edit</a></td>
                <td><a class="btn btn-outline-danger" href="/admin/category/softdelete/<%=item._id%>" role="button">Discard</a></td>
                <td><a class="btn btn-outline-danger" href="/admin/category/delete/<%=item._id%>" role="button">Delete</a></td>
            
            </tr>
              <%})}%>
             
            </tbody>
          </table>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>