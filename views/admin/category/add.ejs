<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    
    <div class="container">
      <h1>Add Category</h1>
      <% if (success_msg && success_msg.length>0) { %>
        <div class="alert alert-success"><%= success_msg %></div>
      <% } %>
      
      <% if (error_msg  && error_msg.length>0) { %>
        <div class="alert alert-danger"><%= error_msg %></div>
      <% } %>
      
      <a href="/admin/category/list" class="btn btn-primary mb-2">Back</a>
      <br>
        <form action="/admin/category/addNew" method="post">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" id="name" class="form-control <% if (errors?.name) { %>is-invalid<% } %>"  name="name" placeholder="Add a category here..." value="<%= old?.name || 'Electronics' %>">
              <% if (errors?.name) { %>
                <div class="invalid-feedback">
                  <%= errors.name %>
                </div>
              <% } %>
             </div>
            <!-- <div class="form-group">
              <label for="exampleInputEmail1">Email </label>
              <input type="email" class="form-control" name="email" placeholder="example@gmail.com" value="example@gmail.com">
             </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Age </label>
              <input type="text" class="form-control" name="age" placeholder="22" value="22">
             </div> -->
           <br>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>